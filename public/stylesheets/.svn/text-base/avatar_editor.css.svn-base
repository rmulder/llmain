body {
    background-color: #4B7399;
    font-family: Verdana, Helvetica, Arial;
    font-size: 14px;
}

a img {
    border: none;
}

a {
    color: #0000FF;
}

.clear {
    clear: both;
    height: 0;
    overflow: hidden;
}

#default_img {
    width: 90px;
    height: 90px;
    border-color: black;
    border-style: solid;
    border-width: 1px;
    margin-top: -10px;
    margin-right: 8px;
    padding: 0px;
    float: left;
}

#img_block {
    border-color: black;
    border-style: solid;
    border-width: 1px;
    margin-top: 30px;
    padding: 5px;
}

#thumbnail {
    width: 90px;
    border-color: blue;
    border-style: solid;
    border-width: 1px;
    margin: 2px;
    padding: 2px;
    cursor: pointer;
}

#container {
    width: 75%;
    margin: 0 auto;
    background-color: #FFF;
    padding: 20px 40px;
    border: solid 1px black;
    margin-top: 20px;
}

#flash_notice, #flash_error {
    padding: 5px 8px;
    margin: 10px 0;
}

#flash_notice {
    background-color: #CFC;
    border: solid 1px #6C6;
}

#flash_error {
    background-color: #FCC;
    border: solid 1px #C66;
}

.fieldWithErrors {
    display: inline;
}

#errorExplanation {
    width: 400px;
    border: 2px solid #CF0000;
    padding: 0px;
    padding-bottom: 12px;
    margin-bottom: 20px;
    background-color: #f0f0f0;
}

#errorExplanation h2 {
    text-align: left;
    font-weight: bold;
    padding: 5px 5px 5px 15px;
    font-size: 12px;
    margin: 0;
    background-color: #c00;
    color: #fff;
}

#errorExplanation p {
    color: #333;
    margin-bottom: 0;
    padding: 8px;
}

#errorExplanation ul {
    margin: 2px 24px;
}

#errorExplanation ul li {
    font-size: 12px;
    list-style: disc;
}

.in_place_editor_field:after {
    content: url(/images/icon_edit.gif)
}

.photo {
    border: 1px solid #FFFFFF;
    clear: none !important;
    float: left;
    margin: 0 0 5px -100px;
}

.business_listing {
    margin: 0 0 50px 80px;
}

.business_listing p {
    margin: 0 0 0 0;
}
